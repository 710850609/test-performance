<?xml version="1.0" encoding="utf-8" ?>
<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <!--格式化输出：%d表示日期，%thread表示线程名，%-5level：级别从左显示5个字符宽度%msg：日志消息，%n是换行符-->
            <pattern>[%d{yyyy-MM-dd HH:mm:ss}] %highlight(%-4level) %magenta(${PID:-}) %white(---) %-10(%yellow([%10.10thread])) %-40(%cyan(%.40logger{20}:%L)) : %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="FILE_INFO_LOG" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>ERROR</level>
            <onMatch>DENY</onMatch>
            <onMismatch>ACCEPT</onMismatch>
        </filter>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level ${PID:-} --- %-20([%20.20thread]) %-55(%.32logger{30}:%L) : %msg%n</pattern>
        </encoder>
        <param name="File" value="${log4jPath}/log.log" />
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <param name="FileNamePattern" value="${log4jPath}/info.%d.log" />
        </rollingPolicy>
    </appender>

    <appender name="FILE_ERROR_LOG" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>ERROR</level>
        </filter>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level ${PID:-} --- %-20([%20.20thread]) %-55(%.32logger{30}:%L) : %msg%n</pattern>
        </encoder>
        <param name="File" value="${log4jPath}/error.log" />
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <param name="FileNamePattern" value="${log4jPath}/error.%d.log" />
        </rollingPolicy>
    </appender>

    <root level="info">
        <appender-ref ref="STDOUT"/>
        <!--        <appender-ref ref="FILE_INFO_LOG"/>-->
        <!--        <appender-ref ref="FILE_ERROR_LOG"/>-->
    </root>

</configuration>
